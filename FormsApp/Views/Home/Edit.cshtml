@model Product
@{
	ViewData["Title"] = "Edit";
}
@* enctype="multipart/form-data" hem text hem de file içeriğini alma (hem text hem resim)*@
<form asp-controller="Home" asp-action="Edit" method="post" enctype="multipart/form-data">
	<div asp-validation-summary="All"></div>
	<input type="hidden" asp-for="ProductId" /> @* post edildiğinde id'yi alabilmek için, hangi idli product güncellenecek*@
	<div class="mb-3">
		@* Labeller arası name bilgisi silindi çünkü asp- ile gliyor tekrar yazmaya gerek yok *@
		@* type="text" name="Image" id="Image" bunları tanımlamaya gerek yok çünkü input asp-for="Image" ile geliyor  *@
		<label asp-for="Name" class=" form-label"></label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Price" class="form-label"></label>
		<input asp-for="Price" class="form-control" />
		<span asp-validation-for="Price"></span>

	</div>
	<div class="input-group mb-3">
		<input type="file" name="imageFile" id="imageFile" class="form-control" />
	</div>
	<div>
		<img src="~/img/@Model.Image" alt="" style="width:100px;" />
		<input type="hidden" asp-for="@Model.Image" /> @* sayfa post ediliğinde resim tekrar gönderilmesini sağlar *@
	</div>
	<div class="mb-3">

		@* asp-items="ViewBag.Categories" ile kategori bilgileri alındı *@
		<label asp-for="CategoryId" class="form-label"></label>
		<select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
			<option value="">Hepsi</option>
		</select>
		<span asp-validation-for="CategoryId"></span>

	</div>
	<div class="mb-3 form-check">
		<input type="checkbox" asp-for="IsActive" class="form-check-input" />
		<label asp-for="IsActive" class="form-check-label">Aktif mi?</label>
		<span asp-validation-for="IsActive"></span>

	</div>
	<button type="submit" class="btn btn-primary">Kaydet</button>
</form>
