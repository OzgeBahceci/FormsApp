@model Product
@{
    ViewData["Title"] = "Create";
}
<form asp-controller="Home" asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        @* Labeller arası name bilgisi silindi çünkü asp- ile gliyor tekrar yazmaya gerek yok *@
        @* type="text" name="Image" id="Image" bunları tanımlamaya gerek yok çünkü input asp-for="Image" ile geliyor  *@
        <label asp-for="Name" class=" form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price"></span>

    </div>
    <div class="mb-3">
        <label asp-for="Image" class="form-label"></label>
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image"></span>

    </div>
    <div class="mb-3">

        @* asp-items="ViewBag.Categories" ile kategori bilgileri alındı *@
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
            <option value="">Hepsi</option>
        </select>
        <span asp-validation-for="CategoryId"></span>

    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Aktif mi?</label>
        <span asp-validation-for="IsActive"></span>

    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
